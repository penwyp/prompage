{
  "manifest_version": 3,
  "name": "Prompts Manager",
  "description": "一个用于管理 AI 提示词的插件，支持一键搜索、复制、编辑和分类切换",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
